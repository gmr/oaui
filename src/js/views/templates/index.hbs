<ul class="nav nav-tabs" role="tablist">
  {{#each locations}}
  <li class="nav-item">
    <a class="nav-link{{#if @first}} active{{/if}}" href="#index-{{name}}" data-toggle="tab" role="tab" aria-controls="{{name}}">{{name}}</a>
  </li>
  {{/each}}
</ul>
<div class="tab-content">
  {{#each locations}}
  <div class="tab-pane{{#if @first}} active{{/if}}" id="index-{{name}}" role="tabpanel">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Version</th>
        </tr>
      </thead>
      <tbody>
      {{#each apis}}<tr>
        <td><a href="#api?{{url}}">{{info.title}}</a></td>
        <td><a href="#api?{{url}}">{{info.version}}</a></td>
      </tr>{{/each}}
      </tbody>
    </table>
  </div>
  {{/each}}
</div>
